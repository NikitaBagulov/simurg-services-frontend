{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React App",
  "extends": "./base.json",
  "compilerOptions": {
    "module": "ESNext",

    "moduleResolution": "Bundler",
    "declaration": false,
    "declarationMap": false,
    "allowJs": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  }
}
